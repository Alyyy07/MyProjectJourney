<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>
            <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Contact</a>

          <% if (msg.length !== 0) { %>
            <div class="alert alert-success">
              <%= msg %>
            </div>
          <% } %>

            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                      <th scope="col">No.</th>
                      <th scope="col">Nama</th>
                      <th scope="col">No. Handphone</th>
                      <th scope="col">Aksi</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if (contacts.length === 0) { %>
                      <tr>
                        <td colspan="4">
                            <div class="alert alert-danger fw-bold" role="alert">
                                Data contact masih kosong
                            </div>
                        </td>
                        </tr>
                    <% }%>
                    <% contacts.forEach((c,i) => { %>
                        <tr>
                            <th scope="row"><%= i+1 %> </th>
                            <td><%= c.nama %> </td>
                            <td><%= c.nohp %> </td>
                            <td><a href="/contact/<%=c.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a></td>
                          </tr>
                    <% }) %>
                  </tbody>
              </table>
        </div>
    </div>
</div>